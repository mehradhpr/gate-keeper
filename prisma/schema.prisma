generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id        String @id @default(uuid())
  firstName String
  lastName  String
  email     String @unique
  password  String
  roles     Role[] @relation()
}

model Role {
  id          String       @id @default(uuid())
  name        String       @unique
  permissions Permission[] @relation()
  accounts    Account[]    @relation()
}

model Permission {
  id    String @id @default(uuid())
  name  String @unique
  roles Role[] @relation()
}
